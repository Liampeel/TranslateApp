<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    >



 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >

  <TextView
      android:id="@+id/TitleRecy"
      android:layout_width="417dp"
      android:layout_height="28dp"
      android:textSize="25sp"
      android:gravity="center"
      android:text="History of Translations"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <LinearLayout
      android:id="@+id/container1"
      android:layout_width="411dp"
      android:layout_height="157dp"
      android:layout_constraintTop_toTopOf="@id/TitleRecy"
      android:orientation="vertical"
      android:padding="10dp"
      android:layout_marginTop="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/TitleRecy">


   <TextView
       android:id="@+id/initialTextRecy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text=""
       android:textSize="15sp" />

   <TextView
       android:id="@+id/languageRecy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text=""
       android:textSize="15sp" />

   <TextView
       android:id="@+id/translatedTextRecy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text=""
       android:textSize="15sp" />

   <TextView
       android:id="@+id/dateCreatedRecy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text=""
       android:textSize="15sp" />


  </LinearLayout>



 </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>